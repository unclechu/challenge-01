$max-w = 980px

header, .content
	margin: 0 auto
	max-width $max-w
	padding 20px

footer
	border-radius 0 !important

.ui.segment > *
	margin-top 0

.catalog-categories-menu nav
	.ui .item.active
		font-weight bold

.catalog-category-elements
	.ui.card
		width 100% !important

		.image img
			width 100% !important
			height auto !important

	> .pagination.top
		margin-bottom 15px

	> .pagination.bottom
		margin-top 30px

form
	.ui.action.input > .ui.button
		padding 0

		button
			background none
			border 0
			margin 0
			padding 11px 22px
			size 100%
