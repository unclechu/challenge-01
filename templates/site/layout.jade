doctype html
html(lang=lang)
	head
		meta(charset="utf-8")
		title= pageTitle

		script(src=staticUrl("jquery/jquery.min.js"))

		link(
			href=staticUrl("semantic-ui/semantic.min.css")
			rel="stylesheet"
			type="text/css")
		script(src=staticUrl("semantic-ui/semantic.min.js"))

		link(
			href=staticUrl("site-build.css")
			rel="stylesheet"
			type="text/css")
		script(src=staticUrl("site-build.js"))
	body
		.top-side
			header
				h1= pageTitle
				.ui.menu
					h3.header.item= local.menu
					each item in menu
						if item.active
							a.item.active(href=item.href)= item.title
						else
							a.item(href=item.href)= item.title
			.content
				block pageContent
		footer.ui.inverted.segment
			p Author: Viacheslav Lotsmanov
			p License: GNU/AGPLv3
